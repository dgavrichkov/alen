extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = "AH project"

block content
	div.page
		div.page__header
			include ../../blocks/modules/allhomes/header/header.pug
		main.page__main
			include ../../blocks/modules/allhomes/hero-slider-project.pug
			section.project-order-block
				div.project-order-block__inner
					div.project-order-block__tabs.ordertabs
						div.ordertabs__controls
							div.ordertabs__control Фасады
							div.ordertabs__control Поэтажные планы
						div.ordertabs__blocks
							div.ordertabs__blocks
								div.ordertabs__block.ordertabs__tiles
									picture
										img(src="/images/allhomes/facade-1.png" alt="")
									picture
										img(src="/images/allhomes/facade-2.png" alt="")
									picture
										img(src="/images/allhomes/facade-3.png" alt="")
									picture
										img(src="/images/allhomes/facade-4.png" alt="")
								div.ordertabs__block.floor-tabs
									div.floor-tabs__controls
										button(type="button" dat) 1 этаж
										button(type="button") 2 этаж
										button(type="button") 3 этаж
									div.floor-tabs__blocks
										picture
											img(src="/images/allhomes/floor-1.png" alt="")
										picture
											img(src="/images/allhomes/floor-1.png" alt="")
										picture
											img(src="/images/allhomes/floor-1.png" alt="")
					div.project-order-block__detail
						form.project-form
							div.project-form__head
								h2 Заказ проекта
								div.project-form__actions.good-actions
									button(type="button").good-actions__favorite
									button(type="button").good-actions__compare
							dl.project-form__info
								dt Архитектурно-строительная часть
								dd 18000 ₽
							div.project-form__check
								input(type="checkbox" name="mirror" id="order-mirror" hidden)
								label(for="order-mirror") Зеркальный проект
							fieldset.project-form__set
								legend Дополнения
								div.project-form__item
									div.project-form__check
										input(type="checkbox" name="size" id="order-size" hidden)
										label(for="order-size") Инженерный размер
										div.project-form__check-price 5000 ₽
								div.project-form__item
									div.project-form__check
										input(type="checkbox" name="size" id="order-passport" hidden)
										label(for="order-passport") Паспорт проекта
										div.project-form__check-price 2999 ₽
									span.project-form__note Требуется при оформление разрешения на строительство
								div.project-form__item
									div.project-form__check
										input(type="checkbox" name="size" id="order-paper" hidden)
										label(for="order-paper") Бумажная копия проекта:
										div.counter
											button(type="button").counter__increase
											input(type="text").counter__field
											button(type="button").counter__decrease
										div.project-form__check-price 1800 ₽
								div.project-form__item
									div.project-form__check
										input(type="checkbox" name="size" id="order-pdf" hidden)
										label(for="order-pdf") PDF копия проекта:
										div.project-form__check-price 5000 ₽
								div.project-form__item
									div.project-form__check
										input(type="checkbox" name="size" id="order-pdf" hidden)
										label(for="order-pdf") DWG копия проекта
										div.project-form__check-price 5000 ₽
								div.project-form__item
									div.project-form__check
										input(type="checkbox" name="size" id="order-pdf" hidden)
										label(for="order-pdf") Генплан
										div.project-form__check-price 4500 ₽
									span.project-form__note Посадка дома на участке. Потребуется кадастровая выписка
							fieldset.project-form__set
								legend Другой тип фундамента
								div.project-form__item
									div.project-form__check
										input(type="checkbox" name="size" id="order-pdf" hidden)
										label(for="order-pdf") Цокольный этаж
										div.project-form__check-price 18000 ₽
								div.project-form__item
									div.project-form__check
										input(type="checkbox" name="size" id="order-pdf" hidden)
										label(for="order-pdf") Ленточный на глубину промерзания
										div.project-form__check-price 15000 ₽
								div.project-form__item
									div.project-form__check
										input(type="checkbox" name="size" id="order-pdf" hidden)
										label(for="order-pdf") Монолитная ж/б плита
										div.project-form__check-price 15000 ₽
							div.project-form__fullprice 48000 ₽
							button(type="submit").project-form__submit Заказать проект
						div.project-order-block__part Заказать часть проекта
			section.project-parameters
				div.project-parameters__inner
					h2.project-parameters__title Характеристики проекта
					dl.project-parameters__list
						div
							dt Площадь, м2
							dd 202 м2
						div
							dt Размер дома 
							dd 7х8
						div
							dt Этажность
							dd 2
						div
							dt Цокольный этаж
							dd есть
						div
							dt Мансарда
							dd есть
						div
							dt Гараж
							dd 2
						div
							dt Спален
							dd 4
						div
							dt Санузлов
							dd 2
						div
							dt Основной материал / наружные стены 
							dd пеноблоки / газобетон / керамические блоки 375-400 мм + утеплитель
						div
							dt Облицовочный материал
							dd пеноблоки / газобетон / керамические блоки 375-400 мм + утеплитель
						div
							dt Наружная отделка
							dd керамические блоки / дерево
					dl.project-parameters__list
						div
							dt Каркас
							dd газобетон
						div
							dt Кровля
							dd гибкая черепица
						div
							dt Тип перекрытий
							dd сборный ж/б
						div
							dt Фундамент
							dd свайно-ростверковый
						div
							dt Стиль
							dd готика
						div
							dt Площадь застройки, м2 
							dd 159
						div
							dt Бассейн
							dd есть
						div
							dt Особенности
							dd большие окна
						div
							dt Высота этажей
							dd 1 - 2,02 м; 2 - 3,03м
						div
							dt Примерная стоимость материалов
							dd 1 000 0000 ₽
			section.project-description.grid-section
				div.grid-container
					div.grid-regular-box.text-box
						p Небольшой загородный дом выполнен из ячеистого бетона и предназначен для постоянного проживания семьи из 4-6 человек. Сдержанные тона в отделке дома вызывают спокойствие и умиротоворение. Планировка дома простая, но функцилнальная и удобная для проживания круглый год. Дом светлый, теплый и комфортный, наличие камина усиливает эффект домашнего уюта.
			include ../../blocks/modules/allhomes/index-gallery-p.pug
			include ../../blocks/modules/allhomes/index-ready.pug
			include ../../blocks/modules/allhomes/comments.pug
			section.grid-section
				div.grid-container
					div.socials-share
						a(href="" data-share-ico="link").socials-share__link
							span.visually-hidden Скопировать ссылку
						a(href="" data-share-ico="vk").socials-share__link
							span.visually-hidden Вконтакте
						a(href="" data-share-ico="inst").socials-share__link
							span.visually-hidden Инстаграм

		div.page__popup
			include ../../blocks/modules/allhomes/popup.pug
		div.page__footer
			include ../../blocks/modules/allhomes/footer.pug
			
block scripts
	script(src="js/swiper-bundle.min.js")
	script(src="js/allhomes.js")